<p id="notice"><%= notice %></p>

<h1>Pizzas</h1>

<head>
  <style>
    .flex-container {
      display: flex;
      flex-wrap: wrap;
      background-color: DodgerBlue;
    }

    .flex-container > div {
      background-color: #f1f1f1;
      width: 100px;
      margin: 10px;
      text-align: center;
      line-height: 75px;
      font-size: 15px;
    }
  </style>
</head>


<div class="flex-container">
    <% @pizzas.each do |pizza| %>
      <tr>
        <div><%= pizza.name %></div>
      </tr>
    <% end %>
</div>

<br>

